{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "monorepo": true,
  "root": "apps/somnium-nestjs-backend",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json",
        "watchAssets": true,
        "assets": [
          "**/*.yaml",
          "../config/**/*.yaml"
        ],
        "plugins": [
          {
            "name": "@nestjs/swagger",
            "options": {
              "dtoFileNameSuffix": [
                ".dto.ts",
                ".schema.ts"
              ],
              "introspectComments": true
            }
          }
        ]
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "watchAssets": true,
        "assets": [
          "**/*.yaml",
          "../config/**/*.yaml"
        ]
      }
    },
    "core": {
      "type": "library",
      "root": "libs/core",
      "entryFile": "index",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json",
        "watchAssets": true,
        "assets": [
          "**/*.yaml"
        ]
      }
    }
  }
}
