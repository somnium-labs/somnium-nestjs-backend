{
  "name": "somnium-nestjs-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "copy-asset": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=. proto/*.proto && mkdir -p dist/proto && cp proto/*.proto dist/proto/",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:api-gateway": "cross-env NODE_ENV=prod nest start api-gateway",
    "start:api-gateway:dev": "cross-env NODE_ENV=dev nest start api-gateway --watch",
    "start:api-gateway:debug": "cross-env NODE_ENV=dev nest start api-gateway --debug --watch",
    "start:api-gateway:prod": "cross-env NODE_ENV=prod node dist/apps/api-gateway/main",
    "start:auth": "cross-env NODE_ENV=prod nest start auth",
    "start:auth:dev": "cross-env NODE_ENV=dev nest start auth --watch",
    "start:auth:debug": "cross-env NODE_ENV=dev nest start auth --debug --watch",
    "start:auth:prod": "cross-env NODE_ENV=prod node dist/apps/auth/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/somnium-nestjs-backend/test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.8",
    "@liaoliaots/nestjs-redis": "^9.0.5",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/microservices": "^10.1.3",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.7",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cross-env": "^7.0.3",
    "i": "^0.3.7",
    "ioredis": "^5.3.2",
    "jose": "^4.14.4",
    "moment-timezone": "^0.5.43",
    "mongoose": "^7.4.2",
    "nest-winston": "^1.9.3",
    "nestjs-slack": "^2.0.0",
    "npm": "^9.8.1",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ts-proto": "^1.156.2",
    "twitter-api-v2": "^1.15.1",
    "winston": "^3.10.0",
    "winston-elasticsearch": "^0.17.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/proto(|/.*)$": "<rootDir>/libs/proto/src/$1",
      "^@app/core(|/.*)$": "<rootDir>/libs/core/src/$1"
    }
  }
}
